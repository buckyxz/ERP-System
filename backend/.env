# Server port
PORT=3000

# Frontend URL (CORS için)
FRONTEND_URL=http://localhost:3001

# MongoDB bağlantı URI'si
MONGODB_URI=mongodb://localhost:27017/erp_sistem

# JWT (JSON Web Token) için gizli anahtar
JWT_SECRET=your_secret_key_here

# Node.js ortamı (development, production, test)
NODE_ENV=development

# Rate limiting ayarları
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000  # 15 dakika
RATE_LIMIT_MAX=100  # 15 dakikada maksimum 100 istek

# Dosya yükleme limiti (byte cinsinden, varsayılan 5MB)
FILE_UPLOAD_LIMIT=5 * 1024 * 1024

# Loglama seviyesi (error, warn, info, verbose, debug, silly)
LOG_LEVEL=info

# SSL/TLS sertifika yolları (HTTPS için, opsiyonel)
# SSL_KEY_PATH=/path/to/privkey.pem
# SSL_CERT_PATH=/path/to/fullchain.pem